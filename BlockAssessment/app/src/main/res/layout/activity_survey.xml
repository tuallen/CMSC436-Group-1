<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SurveyActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:text="@string/default_survey_title"
        android:textColor="#000000"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewHousing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Housing"
        app:layout_constraintBottom_toTopOf="@+id/textViewNeighborhood"
        app:layout_constraintStart_toStartOf="@+id/textViewTitle"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle" />

    <TextView
        android:id="@+id/textViewNeighborhood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neighborhood"
        app:layout_constraintBottom_toTopOf="@+id/textViewTransportation"
        app:layout_constraintStart_toStartOf="@+id/textViewHousing"
        app:layout_constraintTop_toBottomOf="@+id/textViewHousing" />

    <TextView
        android:id="@+id/textViewTransportation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="157dp"
        android:text="Transportation"
        app:layout_constraintStart_toStartOf="@+id/textViewNeighborhood"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewEnvironment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="Environment"
        app:layout_constraintStart_toStartOf="@+id/textViewTransportation"
        app:layout_constraintTop_toBottomOf="@+id/textViewTransportation" />

    <TextView
        android:id="@+id/textViewHealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Health"
        app:layout_constraintStart_toStartOf="@+id/textViewEnvironment"
        app:layout_constraintTop_toBottomOf="@+id/textViewEnvironment" />

    <TextView
        android:id="@+id/textViewEngagement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Engagement"
        app:layout_constraintStart_toStartOf="@+id/textViewHealth"
        app:layout_constraintTop_toBottomOf="@+id/textViewHealth" />

    <TextView
        android:id="@+id/textViewOpportunity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="Opportunity"
        app:layout_constraintStart_toStartOf="@+id/textViewEngagement"
        app:layout_constraintTop_toBottomOf="@+id/textViewEngagement" />

    <TextView
        android:id="@+id/textViewPersonalReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal Review"
        app:layout_constraintBottom_toTopOf="@+id/editTextPersonalReview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextHousing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Rate 1-100"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/textViewHousing"
        app:layout_constraintEnd_toEndOf="@+id/textViewTitle"
        app:layout_constraintTop_toTopOf="@+id/textViewHousing" />

    <EditText
        android:id="@+id/editTextNeighborhood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/textViewNeighborhood"
        app:layout_constraintEnd_toEndOf="@+id/editTextHousing"
        app:layout_constraintTop_toTopOf="@+id/textViewNeighborhood" />

    <EditText
        android:id="@+id/editTextTransportation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/textViewTransportation"
        app:layout_constraintEnd_toEndOf="@+id/editTextNeighborhood"
        app:layout_constraintTop_toTopOf="@+id/textViewTransportation" />

    <EditText
        android:id="@+id/editTextEnvironment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/textViewEnvironment"
        app:layout_constraintEnd_toEndOf="@+id/editTextTransportation"
        app:layout_constraintTop_toTopOf="@+id/textViewEnvironment" />

    <EditText
        android:id="@+id/editTextHealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/textViewHealth"
        app:layout_constraintEnd_toEndOf="@+id/editTextEnvironment"
        app:layout_constraintTop_toTopOf="@+id/textViewHealth" />

    <EditText
        android:id="@+id/editTextEngagement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/textViewEngagement"
        app:layout_constraintEnd_toEndOf="@+id/editTextHealth"
        app:layout_constraintTop_toTopOf="@+id/textViewEngagement" />

    <EditText
        android:id="@+id/editTextOpportunity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/textViewOpportunity"
        app:layout_constraintEnd_toEndOf="@+id/editTextEngagement"
        app:layout_constraintTop_toTopOf="@+id/textViewOpportunity" />

    <EditText
        android:id="@+id/editTextPersonalReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="177dp"
        android:layout_marginBottom="177dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editTextOpportunity" />

    <Button
        android:id="@+id/buttonSubmitAssessment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPersonalReview" />
</androidx.constraintlayout.widget.ConstraintLayout>